FROM rust:1.89-bookworm AS builder
WORKDIR /app

COPY . .
RUN cargo build --release --bin mem-api

FROM debian:bookworm-slim
RUN apt-get update \
  && apt-get install -y --no-install-recommends ca-certificates \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY --from=builder /app/target/release/mem-api /usr/local/bin/mem-api

EXPOSE 8001
CMD ["mem-api"]
